<%- include('partials/header') -%>

    <div class="container compose justify-content-center align-items-center">
        <div class="col-12 pt-5 pb-5 pr-5 mt-5 mr-5 mb-5 ">
            <h2 class="tm-color-primary tm-post-title tm-mb-60">Compose Your Blog</h2>
            <hr>
            <form method="post" action="/compose" class="compose-form" enctype="multipart/form-data">
                <h3>Drop Us a Message</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="bName" class="form-control" placeholder="Your Name *" value="" required />
                        </div>
                        <div class="form-group">
                            <input type="text" name="bEmail" class="form-control" placeholder="Your Email *" value="" required />
                        </div>
                        <div class="form-group">
                            <input type="text" name="bHeading" class="form-control" placeholder="Blog Heading *" value="" required />
                        </div>
                        <div class="form-group">
                            <input type="text" name="bTags" class="form-control" placeholder="Tags * (saperated by space)" value="" required />
                        </div>
                        <div class="form-group">
                            <label class="d-flex align-items-between">Your blog Photo: <input class="form-control-file" type="file" accept="image/*" name="photo" required></label>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea name="bMsg" class="form-control" placeholder="Your Message *" style="width: 100%; height: 230px; " required></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="tm-btn tm-btn-primary tm-btn-small ml-3">Publish</button>
                    </div>
                </div>


            </form>

        </div>

    </div>
    <%- include( 'partials/footer') -%>