<%- include('partials/header') -%>

    <div class="container compose justify-content-center align-items-center">
        <div class="col-12 pt-5 pb-5 pr-5 mt-5 mr-5 mb-5 ">
            <div class="d-flex justify-content-between">
                <h1 class="tm-color-primary  tm-mb-60">Compose Your Blog:</h1>
                <h3 class="tm-color-primary tm-post-title">New User: <a href="/signup"><u>Authenticate and Register</u></a></h3>
            </div>
            <hr>
            <form method="post" action="/compose" class="compose-form" enctype="multipart/form-data">
                <h3>Your Blog Info :</h3>
                <div class="row">
                    <div class="col-md-6">


                        <div class="form-group mt-5 mb-5">
                            <input type="text" name="bHeading" class="form-control" placeholder="Blog Heading *" value="" required />
                        </div>
                        <div class="form-group">
                            <input type="text" name="bTags" class="form-control" placeholder="Tags * (saperated by space)" value="" required />
                        </div>
                        <div class="form-group">
                            <label class="d-flex align-items-between mt-5">Your blog Photo: <input class="form-control-file" type="file" accept="image/*" name="photo" required></label>

                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea name="bMsg" class="form-control" placeholder="Your Article *" style="width: 100%; height: 300px; " required></textarea>
                        </div>
                    </div>


                </div>

                <div class="form-group text-center">
                    <button class="tm-btn tm-btn-primary tm-btn-small mt-4 w-75">Publish</button>
                </div>
            </form>

        </div>

    </div>
    <%- include( 'partials/footer') -%>